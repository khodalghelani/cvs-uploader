<p id="notice"><%= notice %></p>

<h1 align= "center">Excel Uploader</h1>

<h3>Import Excel File</h3>
    <%= form_tag import_ts_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%= submit_tag "Upload Excel" %>
<% end %>
<br>    
<%= link_to 'New File', new_t_path %>

<br><br>

<table>
     
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Author</th>
      <th>Tags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ts.each do |t| %>
      <tr>
        <td><%= t.title %></td>
        <td><%= t.description %></td>
        <td><%= t.author %></td>
        <td><%= t.tags %></td>
        <td><%= link_to 'Show', t %></td>
        <td><%= link_to 'Edit', edit_t_path(t) %></td>
        <td><%= link_to 'Destroy', t, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

